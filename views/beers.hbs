<h1>BEERS</h1>
<div class="container">
    <div class="row">

        {{#each beersFromApi}}
        <div class="card col-4 m-3 p-3" style="width: 18rem;">
            <img class="card-img-top mx-auto mb-5" src="{{this.image_url}}" alt="{{this.name}}">
            <div class="card-body">
                <h2 class="card-title text-center">{{this.name}}</h2>
                <p><span>{{this.tagline}}</span></p>
                <p class="card-text">{{this.description}}</p>
            </div>
        </div>
        {{/each}}

    </div>
</div>
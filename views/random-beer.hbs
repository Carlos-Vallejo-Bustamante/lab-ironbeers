<h1>RANDOM BEER</h1>
<div class="container center mt-5">
    <div class="row">

        {{#each responseFromAPI}}
        <div class="card mb-3" style="max-width: 700px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{image_url}}" class="rounded mx-auto d-block mt-5 pt-5 random" alt="{{name}}">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h2 class="card-title">{{name}}</h2>
                        <p class="card-text">{{description}}</p>
                        <p class="card-text"><small class="text-muted">{{tagline}}</small></p>
                        <p class="card-text">Food Pairing</p>
                        <ul>
                            {{#each this.food_pairing}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>